### Output configuration
#
# Wallpaper
output * bg ./wallpapers/logo.jpg fill

# Read `man 5 sway` for a complete reference.
#
# Status Bar:
#
# Read `man 5 sway-bar` for more information about this section.
#bar {
#    swaybar_command waybar
#}

# Handle window style/behaviour
default_border pixel 1

gaps inner 0
gaps outer 0

# Set colors
set $bg #04030F
set $fg #faf6f3
set $br #9ee1b6
set $ia #04030F
set $ur #a11021

# class                 border  backgr. text    indicator child_border
client.focused          $br     $br     $bg     $ia       $br
client.focused_inactive $bg     $bg     $fg     $ia       $bg
client.unfocused        $bg     $bg     $fg     $ia       $bg
# Urgency only works for Xwayland windows
client.urgent           $ur     $ur     $fg     $ia       $ur 
client.background $bg

