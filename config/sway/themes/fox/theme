### Output configuration
#
# Wallpaper
output * bg ./wallpapers/logo.jpg fill

for_window [app_id="pavucontrol"] border normal
for_window [app_id="blueman-manager"] border normal

# Handle window style/behaviour
default_border pixel 1

gaps inner 0
gaps outer 0

# Set colors
set $bg #04030F
set $fg #faf6f3
set $br #9ee1b6
set $ia #04030F
set $ur #a11021

include ./colorschemes/$colorscheme/theme

# class                 border  backgr. text    indicator child_border
client.focused          $br     $br     $fg     $ia       $br
client.focused_inactive $bg     $bg     $fg     $ia       $bg
client.unfocused        $bg     $bg     $fg     $ia       $bg
# Urgency only works for Xwayland windows
client.urgent           $ur     $ur     $fg     $ia       $ur 
client.background $bg

mode "widgets" {
    # up will hide eww bar0
    # down will show eww bar0
    bindsym $down exec eww open bar0 --force-wayland | xargs swaymsg exec --
    bindsym $up exec eww close bar0 --force-wayland | xargs swaymsg exec --

    # Ditto, with arrow keys
    bindsym Down exec eww open bar0 --force-wayland | xargs swaymsg exec --
    bindsym Up exec eww close bar0 --force-wayland | xargs swaymsg exec --

    # mod+m will toggle mprispopup0
    bindsym $mod+m exec eww open --toggle mprispopup0 --force-wayland | xargs swaymsg exec --

    # Return to default mode
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+x mode "widgets"