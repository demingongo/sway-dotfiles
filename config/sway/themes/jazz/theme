### Output configuration
#
# Wallpaper
output * bg ./wallpapers/candle.jpg fill

# Read `man 5 sway` for a complete reference.
#
# Status Bar:
#
# Read `man 5 sway-bar` for more information about this section.
bar {
    swaybar_command waybar
}

# Handle window style/behaviour
default_border pixel 2

gaps inner 2

# Set colors
set $bg #000000
set $fg #faf6f3
set $br #75898A
set $ia #000000
set $ur #a11021

include ./colorschemes/$colorscheme/theme

# class                 border  backgr. text    indicator child_border
client.focused          $br     $br     $fg     $ia       $br
client.focused_inactive $bg     $bg     $fg     $ia       $bg
client.unfocused        $bg     $bg     $fg     $ia       $bg
# Urgency only works for Xwayland windows
client.urgent           $ur     $ur     $fg     $ia       $ur 
client.background $bg
