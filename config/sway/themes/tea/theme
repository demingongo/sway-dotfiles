### Output configuration
#
# Wallpaper
output * bg ./wallpapers/milktea.jpg fill

# Read `man 5 sway` for a complete reference.
#
# Status Bar:
#
# Read `man 5 sway-bar` for more information about this section.
bar {
    swaybar_command waybar
}

# Handle window style/behaviour
default_border pixel 4

gaps inner 4
gaps outer 6

# Set colors
set $bg #E4C390
set $fg #B39C8B
set $fgs #E7DCD1
set $br #CBA179
set $ia #DD9D6E
set $ur #E2AB97

# class                 border  backgr. text    indicator child_border
client.focused          $br     $br     $fgs    $ia       $br
client.focused_inactive $bg     $bg     $fg     $ia       $bg
client.unfocused        $bg     $bg     $fg     $ia       $bg
# Urgency only works for Xwayland windows
client.urgent           $ur     $ur     $fgs    $ia       $ur 
client.background $bg

